<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_anchorGravity="left|top"
                android:id="@+id/constraintLayout">

            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guidelineLeft"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05"/>

            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guidelineRight"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95"/>

            <View android:layout_width="match_parent"
                  android:layout_height="276dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:background="@drawable/gradient_bg_offer_detail"
                  tools:layout_editor_absoluteX="155dp" android:id="@+id/view2"
            />

            <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="108€"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="4sp"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="@+id/view2"/>

            <TextView
                    android:id="@+id/priceSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="9sp"
                    android:text="12€ pro Stunde"
                    android:ems="10"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            />

            <TextView
                    android:id="@+id/general"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="9sp"
                    android:text="GENERAL"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@+id/priceSubtitle"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            />

            <TextView
                    android:id="@+id/offerTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constrainedWidth="true"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="4sp"
                    android:text="Bierverkauf beim Foo Fighters Konzert"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/general"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginTop="6dp"/>


            <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Ort"
                    android:textSize="20sp"
                    android:textColor="#4e515c"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/view2"/>

            <Button
                    android:id="@+id/mapButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:text="Karte Öffnen"
                    android:layout_marginTop="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@+id/place"
                    android:background="@drawable/border"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            />

            <ImageView
                    android:id="@+id/geoIV"
                    android:layout_width="32dp"
                    android:layout_height="32dp" app:srcCompat="@drawable/geo"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/place"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
            />

            <TextView
                    android:id="@+id/placeValue"
                    android:textSize="15sp"
                    android:textColor="#4e515c"
                    android:lineSpacingExtra="7sp"
                    android:text="Berlin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/place"
                    android:paddingTop="8dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/geoIV"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"/>

            <TextView
                    android:id="@+id/areaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#868b99"
                    android:lineSpacingExtra="7sp"
                    android:gravity="end"
                    android:text="Kreuzberg"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/place"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                    app:layout_constraintLeft_toRightOf="@id/guidelineRight"
            />

            <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/placeValue"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            />

            <TextView
                    android:id="@+id/addressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#868b99"
                    android:lineSpacingExtra="7sp"
                    android:gravity="end"
                    android:text="Rosenthaler Straße 63-64, 10179 - Berlin, Germany"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintRight_toRightOf="@+id/guidelineRight"
            />

            <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkGray"
                    android:lineSpacingExtra="7sp"
                    android:gravity="center"
                    android:text="Beschreibung"
                    android:layout_marginTop="42dp"
                    app:layout_constraintTop_toBottomOf="@+id/addressValue"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"/>
            <TextView
                    android:id="@+id/detailedDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bei diesem Job ist deine ganze Aufmerksamkeit gefragt. Wir suchen jemanden, der das Team unterstützt und sich schnell einarbeitet. Du solltest dich bereits mit dem umfangreichen Angebot von H &amp; M auskennen und Fashion mögen."
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    android:paddingRight="24dp"
                    app:layout_constraintRight_toLeftOf="@id/guidelineRight"
                    app:layout_constraintLeft_toRightOf="@+id/guidelineLeft"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/cardview1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/guidelineLeft"
                    app:layout_constraintRight_toLeftOf="@+id/guidelineRight"
                    app:layout_constraintTop_toBottomOf="@+id/detailedDescription"
                    android:layout_marginTop="24dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#4e515c"
                            android:textStyle="bold"
                            android:lineSpacingExtra="7sp"
                            android:layout_marginLeft="24dp"
                            android:text="Anforderung &amp; Hinweise"
                    />

                    <TextView
                            android:id="@+id/importantNoteTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#868b99"
                            android:lineSpacingExtra="7sp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="16dp"
                            android:text="• Für diesen Job benötigst du einen Führerschein Klasse B\n
• Bitte sei 15 min vor Arbeitszeit Vorort."
                    />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                    android:id="@+id/applyNowBtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardview1"
                    android:layout_marginTop="40dp"
                    android:textSize="15sp"
                    android:lineSpacingExtra="7sp"
                    android:gravity="center"
                    android:text="Jetzt Bewerben"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"/>
            <Button
                    android:id="@+id/notInterestedBtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/applyNowBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:lineSpacingExtra="7sp"
                    android:gravity="center"
                    android:text="Nicht Interessiert"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"/>

        </android.support.constraint.ConstraintLayout>


</ScrollView>